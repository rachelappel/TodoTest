@page "/todolist"
@using System.Text.Json
@using TDServer.Data
@inject IHttpClientFactory ClientFactory


<PageTitle>ToDo List</PageTitle>
<h3>ToDoList</h3>

@{
    <ul>
        @foreach (var t in ToDos)
        {
            <li>@t.Title</li>
                           
        }
    </ul>
}



@code {
    private List<ToDo>? ToDos = new List<ToDo>();
    private bool shouldRender = false;
    private bool hasError = false;
    private string message = "WTF";
    
    protected override bool ShouldRender() => shouldRender;
    
    private readonly IHttpClientFactory _httpClientFactory;
    
    protected override async Task OnInitializedAsync()
    {
        var request = new HttpRequestMessage(HttpMethod.Get, "https://localhost:7196/api/ToDos");
        request.Headers.Add("Accept", "application/json");
        request.Headers.Add("User-Agent", "Blazor-Sample");

        var client = ClientFactory.CreateClient();
        var response = await client.SendAsync(request);

        if (response.IsSuccessStatusCode)
        {
            await using var rs = await response.Content.ReadAsStreamAsync();
            ToDos = await JsonSerializer.DeserializeAsync<List<ToDo>>(rs);
            message = "200";
        }
        else
        {
            hasError = true;
        }
        shouldRender = true;
        message = "ok";
    }
    
    
    
}